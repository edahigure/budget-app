<nav class="navbar navbar-expand-lg navbar-light navbar-custom">
<div class="container ">
    <a class="nav-link navbar-brand " href=<%= root_path %> ><i class="fa-solid fa-arrow-left fa-xl"></i></i></a>
    <div class="main-font">Sign up</div>    
</div>
</nav>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>



  <div class="form-group">
    <%= f.text_field :name , placeholder:"name",class:"form-control item"%> 
  </div>

  <div class="form-group">
    <%= f.email_field :email, placeholder:"email",class:"form-control item"%>
  </div>

  <div class="form-group">    
    <%= f.password_field :password, placeholder:"password (#{ @minimum_password_length} characters minimum)",class:"form-control item"%>
  </div>

  <div class="form-group">    
    <%= f.password_field :password_confirmation, placeholder:"password confirmation",class:"form-control item"%>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary"  %>
  </div>
<% end %>
    
      
